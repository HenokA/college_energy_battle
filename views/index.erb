<script type="text/javascript">

var chart = c3.generate({
    size: {
      height: .75 *  y
    },
    data: {
        rows: [
            // <%= negdata %>, <%= posdata %>
            <%=college%>, <%=data %>
        ],
        type: 'bar',
    colors: {
              <% if college.index('BERKELEY COLLEGE') > 5 %>
                  'BERKELEY COLLEGE': '#DD0000',
              <% else %>
                  'BERKELEY COLLEGE': '#11AE28',
