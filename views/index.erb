<script type="text/javascript">
var chart = c3.generate({
    size: {
      height: .75 *  y
    },
    data: {
        rows: [
            // <%= negdata %>, <%= posdata %>
            <% puts data%>   
            <%=college%>, <%=data %>
        ],
        type: 'bar',
    colors: {
                'Best Colleges': '#11AE28',
                'Worst Colleges': '#DD0000'
              },
        labels: {
          format:{
            y: d3.format('%'),
             // d3.style("font-size", "34px")
          }
        },
        zoom:{
          enabled: true
        }
    },
  axis: {
        rotated: true,
        x:{
          label: {
            text: 'Residential Colleges',
            position: 'outer-middle'
          },
          tick:{
            fit: true,
          }
        }, 
        y:{
          label: {
          text: 'Percent improvement from the previous month (Kilowatt Hours)',
          position: 'outer-center'
          },
          tick:{
              format: d3.format('%'),
          }
        },
    },
    grid: {
        y: {
            lines: [{value: 0}]
        }
    },
    bar: {
      width: {
        ratio: 1
      }
    },
    tooltip: {
        format: {
            title: function (d) { return 'Data ' + d; },
            value: d3.format("g")
        }
    }
});
</script>
