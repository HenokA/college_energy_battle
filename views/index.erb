                  'CALHOUN COLLEGE,JOHN': '#DD0000',
              <% else %>
                  'CALHOUN COLLEGE,JOHN': '#11AE28',
              <% end %>

               <% if college.index('DAVENPORT COLLEGE') > 5 %>
                  'DAVENPORT COLLEGE': '#DD0000',
              <% else %>
                  'DAVENPORT COLLEGE': '#11AE28',
              <% end %>

