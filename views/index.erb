                  'MORSE COLLEGE': '#DD0000',
              <% else %>
                  'MORSE COLLEGE': '#11AE28',
              <% end %>

              <% if college.index('PIERSON COLLEGE') > 5 %>
                  'PIERSON COLLEGE': '#DD0000',
              <% else %>
                  'PIERSON COLLEGE': '#11AE28',
              <% end %>

              <% if college.index('SAYBROOK COLLEGE') > 5 %>
                  'SAYBROOK COLLEGE': '#DD0000',
              <% else %>
                  'SAYBROOK COLLEGE': '#11AE28',
              <% end %>

              <% if college.index('SILLIMAN COLLEGE') > 5 %>
                  'SILLIMAN COLLEGE': '#DD0000',
              <% else %>
                  'SILLIMAN COLLEGE': '#11AE28',
              <% end %>

              <% if college.index('TIMOTHY DWIGHT COLL.') > 5 %>
                  'TIMOTHY DWIGHT COLL.': '#DD0000',
              <% else %>
                  'TIMOTHY DWIGHT COLL.': '#11AE28',
              <% end %>

              <% if college.index('TRUMBULL COLLEGE') > 5 %>
                  'TRUMBULL COLLEGE': '#DD0000',
              <% else %>
                  'TRUMBULL COLLEGE': '#11AE28',
