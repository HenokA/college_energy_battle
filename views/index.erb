                // 'Berkeley College' : '#DD0000'

                // 'BERKELEY COLLEGE': '#DD0000',
                // 'TRUMBULL COLLEGE': '#11AE28'
              },
              size:{
                height: 1
              },
        labels: {
          format:{
            format: function (v, id) { return "Default Format on " + id; },
            // format: {
            //     y: d3.format('$'),
                y: function (v, id) { return id + '\t'+ Math.round(v*100) + '%'; },
//                y2: function (v, id) { return "Y2 Format on " + id; }             // d3.style("font-size", "34px")
          }
        },
        zoom:{
          enabled: true
        }
    },
  axis: {
        rotated: true,
        x:{
          label: {
            text: 'Residential Colleges',
            position: 'outer-middle'
          },
          tick:{
            fit: true,
          }
        }, 
        y:{
          label: {
          text: 'Percent improvement from the previous month (Kilowatt Hours)',
          position: 'outer-center'
          },
          tick:{
              format: d3.format('%'),
          }
        },
    },
    grid: {
        y: {
            lines: [{value: 0}],
        }, 
        x:{
          show: true
        }
    },
    bar: {
      width: {
        ratio: 1
      }
    },
    tooltip: {
        format: {
            title: function (d) { return 'Data ' + d; },
            value: d3.format("g")
        }, 
        grouped : false
    },
    legend:{
      position:'right'
    }
});

</script>
