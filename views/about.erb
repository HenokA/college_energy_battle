	<div class='chart'>


<!-- actual chart -->
			<div id="chart"></div>

			<script type="text/javascript">
			var chart = c3.generate({
					size: {
						height:800
					},
					padding: {
						top: 100
					},
			    data: {
			        columns: [
			            <%= negdata %>, <%= posdata %>
			        ],
			        type: 'bar',

			        colors: {

			        	'Best Colleges': '#11AE28',
			        	'Worst Colleges': '#DD0000'

			        },

			        labels: true
			    },
				axis: {
			        rotated: true,
			        x:{

			        	label: {
			        		text: 'Residential Colleges',
			        		position: 'outer-middle'
			        	},
			        	tick:{
			        		fit: true,
			        	}
			        }
			    },
			    grid: {
			        y: {
			            lines: [{value: 0}]
			        }
			    },
			    bar: {
			    	width: {
			    		ratio: .8
			    	}
			    }
			});
			</script>

	</div>
